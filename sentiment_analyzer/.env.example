# Sentiment Analyzer Service Environment Variables
# Copy this file to .env and fill in your actual values.
# .env file is ignored by git.

# Application settings
DEBUG=False
API_HOST=0.0.0.0
API_PORT=8001

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_sentiment_db_name

# Model settings
SPACY_MODEL_NAME=en_core_web_lg
FINBERT_MODEL_NAME=ProsusAI/finbert
USE_GPU_IF_AVAILABLE=True # Set to False to force CPU

# Batch processing settings
EVENT_FETCH_INTERVAL_SECONDS=60
EVENT_FETCH_BATCH_SIZE=100

# Logging configuration path (optional, defaults to config/logging_config.yaml)
# LOGGING_CONFIG_PATH=config/custom_logging_config.yaml
